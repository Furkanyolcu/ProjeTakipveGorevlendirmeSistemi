@model ProjeTakipSistemi.Models.GorevAtama.PersonelProjeleri

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>PersonelProjeleri</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" style="margin-top: 30px;">
                        <label asp-for="ProjeBaslik" class="control-label"></label>
                        <input asp-for="ProjeBaslik" class="form-control" placeholder="Lütfen Proje Başlığını Giriniz" />
                        <span asp-validation-for="ProjeBaslik" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="margin-top: 30px;">
                        <label asp-for="ProjeAciklama" class="control-label"></label>
                        <input asp-for="ProjeAciklama" class="form-control" placeholder="Lütfen Proje Açıklaması Giriniz" />
                        <span asp-validation-for="ProjeAciklama" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="margin-top: 30px;">
                        <label asp-for="OncelikDurumu" class="control-label"></label>
                        <select asp-for="OncelikDurumu" class="form-control" required>
                            <option value="Seçiniz">Seçiniz</option>
                            <option value="Yüksek Öncelikli">Yüksek Öncelikli</option>
                            <option value="Orta Öncelikli">Orta Öncelikli</option>
                            <option value="Düşük Öncelikli">Düşük Öncelikli</option>
                        </select>
                        <span asp-validation-for="OncelikDurumu" class="text-danger"></span>
                    </div>
                    <div class="mt-2" style="margin-top: 30px;">
                        <button type="submit" style="margin-top: 30px;" class="btn btn-primary me-2">Proje Oluştur </button>
                        <a href="/PersonelBilgileris/Index/" style="margin-top: 30px;" class="btn btn-outline-secondary">Anasayfaya Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    var parentDiv = $("#insert-section");
    var oldSelectDiv = $("#personel-select");
    function PersonelEkle() {
        var newSelectDiv = oldSelectDiv.clone(true);
        oldSelectDiv.find(".bx-plus").remove();
        parentDiv.append(newSelectDiv);
        oldSelectDiv = newSelectDiv;
    }
</script>
