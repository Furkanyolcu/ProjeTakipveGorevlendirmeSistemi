                            <label for="YakinTel" class="form-label">Yakın Telefon</label>
                            <input class="form-control" type="text" id="YakinTel" name="YakinTel" value="@Model.YakinTel" readonly />
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="DogumTarihi" class="form-label">Doğum Tarihi</label>
                            <input class="form-control" type="text" id="DogumTarihi" name="DogumTarihi" value="@Model.DogumTarihi" readonly />
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="IseGirisTarihi" class="form-label">İşe Giriş Tarihi</label>
                            <input class="form-control" type="text" id="IseGirisTarihi" name="IseGirisTarihi" value="@Model.IseGirisTarihi" readonly />
                        </div>
                    </div>
                    <div class="mt-2">
